<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <!-- Cache Configuration for Celonis Challenge Part 2 -->
    <appSettings>
        <!-- Cache Eviction Strategy: "TimeBased" or "SizeBased" -->
        <add key="CacheEvictionStrategy" value="TimeBased" />
        
        <!-- Time-based eviction: MAX_AGE in minutes -->
        <add key="CacheMaxAgeMinutes" value="30" />
        
        <!-- Size-based eviction: MAX_ELEMENTS -->
        <add key="CacheMaxElements" value="100" />
        
        <!-- Cache cleanup interval in minutes -->
        <add key="CacheCleanupIntervalMinutes" value="5" />
        
        <!-- Enable/disable caching -->
        <add key="CacheEnabled" value="true" />
        
        <!-- Historical Data Configuration -->
        <!-- Maximum number of days allowed in a single historical data request -->
        <add key="MaxHistoricalDataDays" value="730" />
        
        <!-- Minimum number of days required in a historical data request -->
        <add key="MinHistoricalDataDays" value="1" />
        
        <!-- Default number of days for historical data (used by HistoricalDataViewModel) -->
        <add key="DefaultHistoricalDataDays" value="30" />
    </appSettings>
</configuration>